.han-action-sheet {
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 9999;
  visibility: hidden;
  opacity: 0;
  transition: all 0s .3s;
}

.han-action-sheet_show {
  visibility: visible;
  opacity: 1;
  transition: all .3s;
}

.han-dialog {
  visibility: hidden;
  opacity: 0;
  transition: all .3s;
}

.han-dialog_show {
  visibility: visible;
  opacity: 1;
}


.han-actionsheet {
  position: fixed;
  left: 0;
  bottom: 0;
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  z-index: 5000;
  width: 100%;
  -webkit-transition: -webkit-transform .3s;
  transition: -webkit-transform .3s;
  transition: transform .3s;
  transition: transform .3s, -webkit-transform .3s;
  overflow: hidden;
}

.han-actionsheet_toggle {
  -webkit-transform: translate(0);
  transform: translate(0);

}

.han-action-sheet-type {
  border-radius: 24rpx;
  background-color: pink;
  width: 690rpx;
  margin: 0 auto;
  background: #fff;
}

.han-actionsheet__title {
  position: relative;
  line-height: 88rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(121, 134, 145, 1);

}

.han-actionsheet__title-text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;

}

.han-actionsheet__cell {
  position: relative;
  text-align: center;
  line-height: 114rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #008ACB
}

.han-actionsheet__menu .han-actionsheet__cell {
  border-top: 1px solid rgba(209, 217, 224, 1)
}

.han-actionsheet__cell::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rrpx solid rgba(0, 0, 0, .1);
  color: rgba(0, 0, 0, .1);

}

.han-actionsheet__action {
  width: 690rpx;
  margin: auto;
  border-radius: 24rpx;
  margin-top: 20rpx;
  background-color: #fff;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}